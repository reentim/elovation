<%= form_for @player, :html => {:class => "form-horizontal"} do |f| %>
  <%= f.error_messages %>

  <fieldset>
    <legend>Player</legend>

    <div class="control-group">
      <%= f.label :name, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :name, :class => "input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :email, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :email, :class => "input-xlarge" %>
      </div>
    </div>

    <div class="description">
      Avatar provided by <a href="http://gravatar.com/">Gravatar</a>, a global avatar service.
    </div>

    <div class="form-actions">
      <%= f.submit :class => "pure-button pure-button-primary" %>
      <%= link_to "Cancel", root_path, :class => "pure-button button-warning" %>
    </div>
  </fieldset>
<% end %>
