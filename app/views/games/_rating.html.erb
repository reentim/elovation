<tr>
  <td>
    <%= (rating_counter + 1).ordinalize %>
  </td>
  <td class="player">
    <%= image_tag(gravatar_url(rating.player, :size => 32)) %>
    <%= link_to rating.player.name, player_game_path(rating.player, @game) %>
  </td>
  <td>
    <%= rating.value %>
  </td>
  <td>
    <%= rating.player.results.for_game(rating.game).wins.size %>
  </td>
  <td>
    <%= rating.player.results.for_game(rating.game).losses.size %>
  </td>
</tr>
